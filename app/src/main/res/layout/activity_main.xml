<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    xmlns:ProgressPicture="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.bluehomestudio.progressimage.ProgressPicture
        android:id="@+id/pp_progress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_action_name"
        android:text="Hello World!"
        ProgressPicture:animation="fade" />


    <com.bluehomestudio.progressimage.ProgressPicture
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_action_name"
        android:text="Hello World!"
        ProgressPicture:animation="scale" />

    <com.bluehomestudio.progressimage.ProgressPicture
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_action_name"
        android:text="Hello World!"
        ProgressPicture:animation="rotate" />

    <com.bluehomestudio.progressimage.ProgressPicture
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_action_name"
        android:text="Hello World!"
        ProgressPicture:animation="rotate_x" />

    <com.bluehomestudio.progressimage.ProgressPicture
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_action_name"
        android:text="Hello World!"
        ProgressPicture:animation="rotate_y" />


</LinearLayout>
